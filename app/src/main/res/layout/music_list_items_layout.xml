<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:padding="5dp"
        app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grayColor">
             <RelativeLayout
                 android:id="@+id/startView"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_toStartOf="@+id/endView"
                 android:padding="5dp">
                 <de.hdodenhof.circleimageview.CircleImageView
                     android:layout_width="45dp"
                     android:layout_height="45dp"
                     android:layout_centerVertical="true"
                     android:layout_alignParentStart="true"
                     android:layout_marginStart="5dp"
                     android:id="@+id/imgIV"/>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_centerVertical="true"
                     android:layout_marginStart="15dp"
                     android:layout_toEndOf="@+id/imgIV">
                     <TextView
                         android:id="@+id/musicNameTV"
                         android:layout_width="220dp"
                         android:layout_height="wrap_content"
                         android:textSize="16sp"
                         android:maxLines="1"
                         android:textColor="@color/white"
                         android:fontFamily="@font/sanchez"/>
                     <TextView
                         android:id="@+id/titleTV"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="5dp"
                         android:textSize="12sp"
                         android:maxLines="1"
                         android:textColor="@color/grayLightColor"
                         android:fontFamily="@font/sanchez"/>
                 </LinearLayout>
             </RelativeLayout>

            <RelativeLayout
                android:id="@+id/endView"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_alignParentEnd="true">
                 <RelativeLayout
                     android:id="@+id/view"
                     android:layout_width="match_parent"
                     android:layout_height="25dp">
                     <ImageView
                         android:visibility="visible"
                         android:id="@+id/playBtn"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:layout_centerHorizontal="true"
                         android:padding="7dp"
                         app:tint="@color/white"
                         android:src="@drawable/playbtn_icon"/>
                     <ImageView
                         android:visibility="gone"
                         android:id="@+id/pauseBtn"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:padding="3dp"
                         android:layout_centerHorizontal="true"
                         app:tint="@color/white"
                         android:src="@drawable/puase_btn_icon"/>
                 </RelativeLayout>
                <TextView
                    android:id="@+id/musicTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:layout_below="@+id/view"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>